<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquerylazy")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jsrender")
    @Scripts.Render("~/bundles/jdata")

</head>
<body>

    <div class="mcentr">@{ Html.RenderAction("MainMenu", "catalog"); }</div>
    <div class="mcentr">
        <div class="fleft lmenu">
            @{ Html.RenderAction("LeftMenu", "catalog"); }
        </div>
        <div class="fleft content">
            @RenderBody()
        </div>
        <div class="cl"></div>
    </div>

    @Scripts.Render("~/bundles/tools")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
