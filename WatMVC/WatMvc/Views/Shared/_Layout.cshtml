<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquerylazy")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container body-content">
        <div class="menu">
            <ul>
                <li><a href="/">home</a></li>
                <li><a href="/catalog/subject/brand">subject brand</a></li>
                <li><a href="/catalog/subject">subject</a></li>
                <li><a href="/brand/merten">Merten</a></li>
            </ul>
        </div>
        @RenderBody()
        <p>&copy; @DateTime.Now.Year - Footer</p>
    </div>

    @Scripts.Render("~/bundles/tools")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
