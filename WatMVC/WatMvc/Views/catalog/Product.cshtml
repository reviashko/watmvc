@model WatMvc.Models.ProductViewModels

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("ProductPartial", Model);

@section scripts{
<script type="text/javascript">
        $(document).ready(function () {
            $("INPUT").click(function () {
                $.ajax({
                    url: '/basket/Add',
                    type: 'POST',
                    //data: { goods_id: 1868, cnt:1 },
                    data: { goods_id: $("INPUT").attr("rel"), cnt: 1 },
                    success: function (result) {
                        alert(result.name);
                    },
                    error: function () {
                        alert("error");
                    }
                });
                return false;
            });
        });
</script>
}